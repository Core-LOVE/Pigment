{
	"schemaVersion": 1,
	"id": "pigment",
	"version": "${version}",
	"name": "Pigment",
	"description": "A mod which expands upon colored blocks!",
	"authors": [
		"KateBulka"
	],
	"contact": {
		"sources": "https://github.com/Core-LOVE/Pigment/tree/1.20.2"
	},
	"license": "MIT",
	"icon": "assets/pigment/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"katebulka.pigment.ExampleMod"
		],
		"client": [
			"katebulka.pigment.ExampleModClient"
		],
		"fabric-datagen": [
			"katebulka.pigment.ExampleModDataGenerator"
		]
	},
	"mixins": [
		"pigment.mixins.json",
		{
			"config": "pigment.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.14.22",
		"minecraft": "~1.20.1",
		"java": ">=17",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}